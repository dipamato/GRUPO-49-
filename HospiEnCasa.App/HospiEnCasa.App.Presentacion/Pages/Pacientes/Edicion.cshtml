@page
@model HospiEnCasa.App.Presentacion.Pages.EdicionModel
@{
}

<br>

<h2 class="text-info" style="text-align: center;">Editar Paciente</h2>

<div class="border">
    <form method="post">

        
        
        <div class="container" style="padding: 50px;">
            <div class="form-group">
                <input type="hidden" asp-for="paciente.Id">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="paciente.Nombre"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="paciente.Nombre" class="form-control">
                    </div>
                    <span asp-validation-for="paciente.Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="paciente.Apellidos"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="paciente.Apellidos" class="form-control">
                    </div>
                    <span asp-validation-for="paciente.Apellidos" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label >Numero Telefono</label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="paciente.NumeroTelefono" class="form-control">
                    </div>
                    <span asp-validation-for="paciente.NumeroTelefono" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 offset-sm-2" >
                        <input type="submit" value="Guardar" class="btn btn-primary form-control">
                    </div>
                    <div class="col-sm-2">
                        <a asp-page="/Index" class="btn btn-success form-control">Volver</a>
                    </div>
                </div>
            </div>

        </div>
    </form>

</div>

