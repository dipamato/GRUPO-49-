@page
@model HospiEnCasa.App.Presentacion.Pages.FormularioPModel
@{
    
}

<br>

<h2 class="text-info" style="text-align: center;">Crear Paciente</h2>

<div class="border">
    <form method="post">
        <input name="uno" type="text">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container" style="padding: 50px;">
            <div class="form-group ">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Paciente.Nombre"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Paciente.Nombre" class="form-control">
                    </div>
                    <span asp-validation-for="Paciente.Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Paciente.Apellidos"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Paciente.Apellidos" class="form-control">
                    </div>
                    <span asp-validation-for="Paciente.Apellidos" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label >Numero Telefono</label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Paciente.NumeroTelefono" class="form-control">
                    </div>
                    <span asp-validation-for="Paciente.NumeroTelefono" class="text-danger"></span>
                </div>
            </div>

            

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 offset-sm-2" >
                        <input type="submit" value="Crear" class="btn btn-primary form-control">
                    </div>
                    <div class="col-sm-2">
                        <a asp-page="/Index" class="btn btn-success form-control">Volver</a>
                    </div>
                </div>
            </div>

        </div>
    </form>

</div>
